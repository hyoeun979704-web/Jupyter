# try-except 문으로 예외 처리하기

# ZeroDivisionError 처리
try:
    x = 10
    y = 0
    result = x / y  # 0으로 나누기 -> ZeroDivisionError 발생
except ZeroDivisionError:
    print("0으로 나눌 수 없습니다! (ZeroDivisionError 처리)")

# ValueError 처리 (문자를 숫자로 바꾸려 할 때)
try:
    text = "abc"
    num = int(text)  # int("abc") -> ValueError 발생
except ValueError:
    print("숫자로 변환할 수 없는 값입니다! (ValueError 처리)")

# 여러 예외를 한 번에 처리
try:
    a = int("10")    # 정상
    b = int("0")     # 0
    c = a / b        # ZeroDivisionError
except (ValueError, ZeroDivisionError) as e:
    print("예외 발생:", type(e).__name__)



# 조건문 작성
score = 85

if score >= 90:
    grade = "A"
elif score >= 80:
    grade = "B"
elif score >= 70:
    grade = "C"
else:
    grade = "F"

print("점수:", score, "성적:", grade)

age = 25
has_ticket = True
is_vip = False

# and / or / not 사용 예제
if (age >= 19 and has_ticket) or is_vip:
    print("입장 가능합니다.")
else:
    print("입장 불가입니다.")

is_rainy = True

if not is_rainy:
    print("우산 없이 나가도 됩니다.")
else:
    print("비가 오니 우산을 챙기세요.")



#루프를 이용한 반복 작업

# for + range()
print("1부터 5까지 출력 (for + range):")
for i in range(1, 6):
    print(i)

# 리스트 순회
fruits = ["apple", "banana", "cherry"]

print("\n과일 리스트 출력:")
for fruit in fruits:
    print(fruit)

# 문자열 순회
word = "Python"

print("\n문자열의 각 글자 출력:")
for ch in word:
    print(ch)

# while 루프: 1부터 5까지 합 구하기
print("\nwhile 루프로 1부터 5까지 합 구하기:")
total = 0
n = 1
while n <= 5:
    total += n
    n += 1

print("합계:", total)

# while 루프: 조건 만족할 때까지 입력 받기 (예시용, 실제 입력은 주석 처리)
# 아래 코드는 구조만 보여주기 위한 예제입니다.
# 실제로 실행할 때는 input() 부분을 사용하세요.

print("\nwhile 예제: 3보다 큰 숫자를 입력할 때까지 반복 (구조 예시)")

test_values = [1, 2, 3, 4]  # 실제로는 input()으로 받는다고 가정
index = 0
number = None

while True:
    number = test_values[index]   # 실제라면: number = int(input("숫자 입력: "))
    print("입력 값:", number)

    if number > 3:
        print("3보다 큰 숫자를 입력했습니다. 반복 종료!")
        break

    index += 1
